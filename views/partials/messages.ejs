<% if (typeof validationErrors != 'undefined') { %>
    <% validationErrors.forEach((error) => { %>
        <div class="alert alert-danger alert-dismissible fade show flash__message" role="alert">
            <%= error.message; %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% }); %>
<% } %>
    
<% if (success_message != '') { %>
    <div class="alert alert-success alert-dismissible fade show flash__message" role="alert">
        <%= success_message; %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>
    
    
    
<% if (error != '') { %>
    <div class="alert alert-danger alert-dismissible fade show flash__message" role="alert">
        <%= error; %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>